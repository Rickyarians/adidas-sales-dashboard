sidebar <- dashboardSidebar(
  sidebarMenu(
    menuItem("Overview", tabName = "page1", icon = icon("video")),
    menuItem("Channels", tabName = "page2", icon = icon("youtube")),
    menuItem("Data", tabName = "page3", icon = icon("table"))
  )
)


body <- dashboardBody(tabItems(
  tabItem(tabName = "page1",
          fluidRow(
            infoBox("TOTAL UNIQUE VIDEOS", length(unique(vids$title)), icon = icon("video"), color = 'red', width = 6),
            infoBox("TOTAL UNIQUE CHANNELS", length(unique(vids$channel_title)), icon = icon("headset"), color = 'black', width = 6),
          ),
          fluidRow(
            box(
              width = 12,
              plotlyOutput(outputId = 'plot1')
            )
          )
  ),
  
  tabItem(tabName = "page2",
         fluidRow(
           box(
            width = 12,
            selectInput(inputId = "select_input", 
                       label = "Choose Video Category",
                       choices = as.vector(levels(vids_clean$category_id))
                  )
           )
         ),
         fluidRow(
           box(
             width = 6,
             plotlyOutput(
               outputId = 'plot2'
             )
           ),
           box(
             width = 6,
             plotlyOutput(
               outputId = 'plot3'
             )
           )
         )
  ),
  
  tabItem(tabName = "page3",
          fluidRow(
            box(
              width = 12,
              DT::dataTableOutput(outputId = 'datatable')
            )
          )
  ))
)


dashboardTitle <- dashboardHeader(
  title = "Youtube Analysis"
)


dashboardPage(
  skin = 'black',
  dashboardTitle,
  sidebar,
  body
)